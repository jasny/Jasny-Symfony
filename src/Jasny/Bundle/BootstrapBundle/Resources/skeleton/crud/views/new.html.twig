{{ "{% extends '" ~ bundle ~ "::base.html.twig' %}" }}
{{ "{% form_theme form 'JasnyBootstrapBundle:Form:form_layout.html.twig' %}" }}

{{ "{% block title %}" }}{{ 'Edit %s%'|trans({ '%s%': entity_desc.singular})|capitalize }}{{ "{% endblock %}" }}

{{ "{% block javascripts %}" }}
    <script type="text/javascript">
        window.onbeforeunload = function() { return "{% trans with {'%s%': entity_desc.singular} %}This new %s% has not yet been saved. If you navigate away, it will be lost.{% endtrans %}"; }
        
        $(function () {
            $("form").submit( function() { window.onbeforeunload = null; } );
            $("form .cancel").click( function() { window.onbeforeunload = null; } );
        });
    </script>
{{ "{% endblock %}" }}

{{ "{% block header %}" }}
    <h1>{{ 'Add %s%'|trans({'%s%': entity_desc.singular})|capitalize }}</h1>
{{ "{% endblock %}" }}

{{ "{% block body %}" }}    
{% if 'index' not in actions %}
<div class="tabbable">
  {%- include 'views/others/list_tabs.html.twig' %}
  
  <div class="tab-content">
{% endif %}
    <section id="{{ route_name_prefix }}-details" class="entity-details new-entity">
        {{ '{{ form_errors(form) }}' }}

        <form id="{{ route_name_prefix }}-form" class="horizontal-form" action="{{ "{{ path('"~ route_name_prefix ~"_create') }}" }}" method="post" {{ "{{ form_enctype(form) }}" }}>
{% if custom_form %}
            {{ "{% include '" ~ bundle ~ ":" ~ entity ~":includes/form.html.twig' %}" }}
{% else %}
            {{ "{{ form_widget(form) }}" }}
{% endif %}
            
            <div class="form-actions">
                <button class="btn primary" type="submit">{{ 'Save'|trans }}</button>
                <a href="{{ "{{ path('"~ route_name_prefix ~"') }}" }}" class="btn cancel">{{ 'Cancel'|trans }}</a>
            </div>
        </form>
    </section>
{% if 'index' not in actions %}
  </div>
</div>
{% endif %}
{{ "{% endblock %}" }}