<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <title>{{ '{% block title %}' ~ 'Welcome'|trans ~ '{% endblock %} | ' ~ sitename|default('My Website'|trans) }}</title>
        
        <!--[if lt IE 9]>
          <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.0/jquery.min.js" type="application/javascript"></script>
        <script src="{{ "{{ asset('bundles/jasnybootstrap/ckeditor/ckeditor.js') }}" }}" type="text/javascript"></script>
        <script src="{{ "{{ asset('bundles/jasnybootstrap/bootstrap/js/min/bootstrap.js') }}" }}" type="application/javascript"></script>
        <script type="application/javascript">
            setTimeout(function(){ $(".flash-message").fadeOut() }, 5000);
        </script>

        {{ "{% block javascripts %}" }}
        {{ "{% endblock %}" }}
        
        <link rel="shortcut icon" href="{{ "{{ asset('favicon.ico') }}" }}" />
        <link rel="stylesheet" href="{{ "{{ asset('bundles/jasnybootstrap/bootstrap/bootstrap.css') }}" }}">

        {{ "{% block stylesheets %}" }}
        {{ "{% endblock %}" }}
    </head>
    <body style="padding-top: 60px">
        <div class="navbar navbar-fixed">
          <div class="navbar-inner">
            <div class="container">
              <span class="brand">{{ sitename|default('My Website'|trans) }}</span>
              <ul class="nav">
                {{ "{% include '" ~ bundle ~ "::nav.html.twig' %}" }}
              </ul>

              {{ "{% if app.security.token %}" }}
                  <ul class="nav secondary-nav">
                      <li><a href="{{ "{{ path('user_edit', {'id': app.security.token.user.id} ) }}" }}"><strong>{{ '{{ app.security.token.user.fullname }}' }}</strong></a></li>
                      <li><a href="{{ "{{ path('logout') }}" }}">{{ 'Log out'|trans }}</a></li>
                  </ul>
              {{ "{% endif %}" }}
          </div>
          </div>
        </div>

        <div class="flash-message">
            {{ "{% if app.session.hasFlash('success') %}" }}
            <div class="alert-message block-message success fade in" data-alert="alert">
                <a class="close" href="#">&times;</a>
                {{ "{{ app.session.flash('success') }}" }}
            </div>
            {{ "{% elseif app.session.hasFlash('notice') %}" }}
            <div class="alert-message flash-message block-message warning fade in" data-alert="alert">
                <a class="close" href="#">&times;</a>
                {{ "{{ app.session.flash('notice') }}" }}
            </div>
            {{ "{% endif %}" }}
        </div>
            
        <div class="container">
            <div class="content">
                <div class="page-header">
                    {{ "{% block header %}" }}
                    {{ "{% endblock %}" }}
                </div>

                {{ "{% block body %}" }}
                {{ "{% endblock %}" }}
            </div>

            <footer>
                <p>&copy; {{ "now"|date("Y") }} {{ sitename|default('My Website'|trans) }}</p>
            </footer>
        </div> 
    </body>
</html>
