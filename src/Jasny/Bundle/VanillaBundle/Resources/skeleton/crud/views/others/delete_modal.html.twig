{% if delete_js %}
    {%- set _d_action = "" %}
    {%- set _d_entity = "" %}
{% else %}
    {%- set _d_action = "{{ path('"~ route_name_prefix ~"_delete', { 'id': entity.id }) }}" %}
    {%- set _d_entity = "{{ entity }}" %}
{% endif %}

        <div id="{{ prefix }}-delete-modal" style="display: none">
            <form method="post" action="{{ _d_action }}">
{% if stringable %}
                <p>{% trans with {'%s%': entity_desc.singular, '%entity%': '<strong class="delete-entity">' ~  _d_entity ~ '</strong>'} %}Are you sure you want to delete %s% '%entity%'?{% endtrans %}</p>
{% else %}
                <p>{% trans with {'%s%': entity_desc.singular} %}Are you sure you want to delete this %s%?{% endtrans %}</p>
{% endif %}
                <div class="actions">
                    <button type="submit">{{ 'Delete'|trans }}</button>
                    <a class="cancel" href="javascript:void()" onclick="$('#{{ prefix }}-delete-modal').hide()">{{ 'Cancel'|trans }}</a>
                </div>
{% if delete_js %}
                <input type="hidden" name="form[_token]" value="" />
                <input type="hidden" name="form[id]" value="" />
{% else %}
                {{ '{{ form_rest(delete_form) }}' }}
{% endif %}
           </form>
        </div>
